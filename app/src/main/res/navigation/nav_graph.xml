<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.naposystems.pepito.ui.splash.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/landingFragment"
        android:name="com.naposystems.pepito.ui.landing.LandingFragment"
        android:label="landing_fragment"
        tools:layout="@layout/landing_fragment">
        <action
            android:id="@+id/action_landingFragment_to_languageSelectionDialog"
            app:destination="@id/languageSelectionDialog" />
        <action
            android:id="@+id/action_landingFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_landingFragment_to_recoveryAccountFragment"
            app:destination="@id/recoveryAccountFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <dialog
        android:id="@+id/languageSelectionDialog"
        android:name="com.naposystems.pepito.ui.languageSelection.LanguageSelectionDialogFragment"
        android:label="language_selection_dialog" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.naposystems.pepito.ui.register.RegisterFragment"
        android:label="@string/label_create_account"
        tools:layout="@layout/register_fragment" />
    <fragment
        android:id="@+id/recoveryAccountFragment"
        android:name="com.naposystems.pepito.ui.recoveryAccount.RecoveryAccountFragment"
        android:label="@string/label_recover_account"/>
</navigation>