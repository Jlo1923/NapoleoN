<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_incoming_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingStart="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@drawable/bg_incoming_message"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstIncomingMessage="@{isFirst}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.7">

            <com.naposystems.pepito.ui.custom.inputPanel.InputPanelQuote
                android:id="@+id/quote"
                style="@style/QuoteConversation"
                android:onClick="@{() -> clickListener.goToQuote(conversation)}"
                app:isGoTo="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="wrap"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_attachment"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/small_margin"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:imageAttachment="@{conversation}"
                app:layout_constraintBottom_toTopOf="@id/textView_message"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quote"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="1"
                tools:src="@drawable/vertical_photo"
                tools:visibility="visible" />

            <com.naposystems.pepito.ui.custom.circleProgressBar.CircleProgressBar
                android:id="@+id/progressBar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageView_attachment"
                app:layout_constraintEnd_toEndOf="@id/imageView_attachment"
                app:layout_constraintStart_toStartOf="@id/imageView_attachment"
                app:layout_constraintTop_toTopOf="@id/imageView_attachment"
                custom:progress="0"
                custom:progressBarThickness="@dimen/circle_progress_bar"
                custom:progressbarColor="@color/colorPrimary"
                tools:progress="70"
                tools:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar_indeterminate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintTop_toTopOf="@id/progressBar" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButton_cancel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_black_40"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/x_small_padding"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintTop_toTopOf="@id/progressBar"
                app:srcCompat="@drawable/ic_close_black_24"
                custom:iconForState="@{conversation}"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/textView_message"
                style="@style/IncomingMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_small_margin"
                android:text="@{conversation.message.body}"
                android:visibility="@{conversation.message.body.empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_attachment"
                tools:text="@tools:sample/lorem[2]" />

            <TextView
                style="@style/IncomingMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:formatTime="@{timeFormat}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_message"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginStart="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_incoming_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorColorTextMyMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="gone"
            app:countDown="@{conversation}"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>