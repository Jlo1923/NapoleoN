<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_palette_black"
        app:tint="?attr/attrIconAndTextColorDrawer" />

    <TextView
        style="@style/BodyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_weight="1"
        android:text="@string/text_appearance_settings_title"
        android:textColor="?attr/attrIconAndTextColorDrawer" />

</LinearLayout>