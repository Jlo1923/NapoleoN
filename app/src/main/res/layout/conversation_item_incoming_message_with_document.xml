<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_incoming_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingStart="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/bg_incoming_message"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstIncomingMessage="@{isFirst}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="4dp"
                android:maxHeight="100dp"
                android:onClick="@{() -> clickListener.goToQuote(conversation)}"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <com.naposystems.pepito.ui.custom.inputPanel.InputPanelQuote
                    android:id="@+id/quote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:isGoTo="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_document_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:attachmentDocumentIcon="@{conversation}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textView_document_name"
                app:layout_constraintTop_toBottomOf="@id/container_quote"
                app:tint="@color/colorTextIncomingMessage"
                tools:src="@drawable/ic_attachment_doc" />

            <TextView
                android:id="@+id/textView_document_name"
                style="@style/IncomingMessageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textStart"
                app:attachmentDocumentName="@{conversation}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_document_type"
                app:layout_constraintEnd_toStartOf="@id/imageView_document_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageView_document_type"
                tools:text="El mero packistan.pdf" />

            <TextView
                style="@style/IncomingMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_document_type"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginStart="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_incoming_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorColorTextMyMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="gone"
            app:countDown="@{conversation}"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>