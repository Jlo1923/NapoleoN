<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/x_small_padding"
        android:paddingEnd="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/bg_my_message"
            android:paddingStart="@dimen/small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstMyMessage="@{isFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_min="wrap"
            app:layout_constraintWidth_percent="0.7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="4dp"
                android:maxHeight="100dp"
                android:onClick="@{() -> clickListener.goToQuote(conversation)}"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/imageView_attachment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <com.naposystems.pepito.ui.custom.inputPanel.InputPanelQuote
                    android:id="@+id/quote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:isGoTo="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_attachment"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/small_margin"
                android:onClick="@{() -> clickListener.onPreviewClick(conversation)}"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:imageAttachment="@{conversation}"
                app:clickListener="@{clickListener}"
                app:itemPosition="@{itemPosition}"
                app:layout_constraintBottom_toTopOf="@id/textView_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_quote"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="1"
                tools:src="@drawable/vertical_photo"
                tools:visibility="visible" />

            <com.naposystems.pepito.ui.custom.circleProgressBar.CircleProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/width_attachment_circle_progress"
                android:layout_height="@dimen/height_attachment_circle_progress"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageView_attachment"
                app:layout_constraintEnd_toEndOf="@id/imageView_attachment"
                app:layout_constraintStart_toStartOf="@id/imageView_attachment"
                app:layout_constraintTop_toTopOf="@id/imageView_attachment"
                custom:progress="0"
                custom:progressBarThickness="@dimen/circle_progress_bar"
                custom:progressbarColor="@color/colorPrimary"
                tools:progress="70"
                tools:visibility="visible" />

            <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/textView_message"
                style="@style/MyMessageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_small_margin"
                android:text="@{conversation.message.body}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_attachment"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="1"
                tools:text="@tools:sample/lorem" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toTopOf="@id/imageView_message_status"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_message"
                app:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_message_sent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_my_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorColorTextIncomingMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="gone"
            app:countDown="@{conversation}"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>