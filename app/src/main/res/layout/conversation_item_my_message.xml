<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x_x_small_padding"
        android:paddingEnd="@dimen/small_padding"
        android:paddingBottom="@dimen/x_x_small_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_my_message"
            android:paddingStart="@dimen/x_small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstMyMessage="@{isFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_min="wrap"
            app:layout_constraintWidth_percent="0.7">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_attachment"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:onClick="@{() -> clickListener.onPreviewClick(conversation)}"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:imageAttachment="@{conversation}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="1"
                tools:src="@drawable/vertical_photo"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView_message"
                style="@style/MyMessageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{conversation.message.body}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_attachment"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="1"
                tools:text="@tools:sample/lorem" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toTopOf="@id/imageView_message_status"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_message"
                app:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_message_sent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>