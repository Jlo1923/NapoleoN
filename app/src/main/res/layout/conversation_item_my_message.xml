<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.naposystems.napoleonchat.utility.Constants.MessageStatus" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="conversation"
            type="com.naposystems.napoleonchat.entity.message.MessageAndAttachment" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.napoleonchat.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/x_small_padding"
        android:paddingEnd="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@drawable/bg_my_message"
            android:minWidth="110dp"
            android:paddingStart="@dimen/small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.7"
            custom:isFirstMyMessage="@{isFirst}">

            <com.naposystems.napoleonchat.ui.custom.inputPanel.InputPanelQuote
                android:id="@+id/quote"
                style="@style/QuoteConversation"
                android:onClick="@{() -> clickListener.goToQuote(conversation, itemPosition)}"
                app:isGoTo="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="wrap"
                tools:visibility="gone" />

            <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/textView_message"
                style="@style/MyMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_small_margin"
                android:text="@{conversation.message.body}"
                android:visibility="@{conversation.message.body.empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quote"
                tools:text="@tools:sample/lorem[1]" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toBottomOf="@+id/textView_message"
                custom:formatTime="@{timeFormat}"
                custom:messageDateSend="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_message"
                custom:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_message_sent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButton_send"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/x_small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/x_small_margin"
            android:background="@drawable/bg_black_40"
            android:padding="@dimen/x_small_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_file_upload_black"
            android:tint="@color/white"
            android:visibility="@{conversation.message.status == MessageStatus.ERROR.status ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/container_message"
            app:layout_constraintEnd_toStartOf="@id/container_message"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@id/container_message"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_my_message"
            android:elevation="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="?attr/attrTextColorTimeMyMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="30 segundos" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>