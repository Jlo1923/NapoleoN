<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/x_small_padding"
    tools:background="@color/quantum_grey">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_uploading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_uploading_files"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/image_upload"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:visibility="gone"
        app:tint="@color/black_212121" />

    <TextView
        android:id="@+id/text_count"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:textColor="@color/black_212121"
        android:textStyle="bold"
        tools:text="4" />

    <TextView
        android:id="@+id/text_quantity"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x_small_margin"
        android:textColor="@color/black_212121"
        tools:text="/ 10" />

</LinearLayout>