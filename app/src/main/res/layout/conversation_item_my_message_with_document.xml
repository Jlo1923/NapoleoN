<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingEnd="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/bg_my_message"
            android:paddingStart="@dimen/x_small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstMyMessage="@{isFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <com.naposystems.pepito.ui.custom.inputPanel.InputPanelQuote
                android:id="@+id/quote"
                style="@style/QuoteConversation"
                android:onClick="@{() -> clickListener.goToQuote(conversation)}"
                app:isGoTo="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="wrap"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_document_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/small_margin"
                app:attachmentDocumentIcon="@{conversation}"
                app:layout_constraintEnd_toStartOf="@id/textView_document_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quote"
                app:tint="@color/colorTextMyMessage"
                tools:src="@drawable/ic_attachment_doc" />

            <com.naposystems.pepito.ui.custom.circleProgressBar.CircleProgressBar
                android:id="@+id/progressBar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/textView_document_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView_document_name"
                custom:progress="0"
                custom:progressBarThickness="@dimen/circle_progress_bar"
                custom:progressbarColor="@color/colorTextMyMessage"
                tools:progress="50"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressBar_indeterminate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:indeterminate="true"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintTop_toTopOf="@id/progressBar" />

            <!-- BUTTON ATTACHMENT STATE -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButton_state"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/bg_black_40"
                android:foreground="?attr/actionBarItemBackground"
                android:padding="@dimen/x_small_padding"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintTop_toTopOf="@id/progressBar"
                app:srcCompat="@drawable/ic_close_black_24"
                custom:iconForState="@{conversation}"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView_document_name"
                style="@style/MyMessageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAlignment="textStart"
                app:attachmentDocumentName="@{conversation}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_document_type"
                app:layout_constraintEnd_toStartOf="@id/progressBar"
                app:layout_constraintStart_toEndOf="@id/imageView_document_type"
                app:layout_constraintTop_toTopOf="@id/imageView_document_type"
                tools:text="El mero packistan.pdf" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:visibility="gone"
                app:formatTime="@{timeFormat}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toTopOf="@id/imageView_message_status"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_document_type"
                app:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_access_time_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_my_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorColorTextIncomingMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="gone"
            app:countDown="@{conversation}"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>