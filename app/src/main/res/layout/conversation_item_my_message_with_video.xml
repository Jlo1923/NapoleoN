<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="conversation"
            type="com.naposystems.napoleonchat.entity.message.MessageAndAttachment" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.napoleonchat.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingEnd="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@drawable/bg_my_message"
            android:paddingStart="@dimen/x_small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstMyMessage="@{isFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.7">

            <com.naposystems.napoleonchat.ui.custom.inputPanel.InputPanelQuote
                android:id="@+id/quote"
                style="@style/QuoteConversation"
                android:onClick="@{() -> clickListener.goToQuote(conversation, itemPosition)}"
                app:isGoTo="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="wrap"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_attachment"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/small_margin"
                android:onClick="@{() -> clickListener.onPreviewClick(conversation)}"
                android:scaleType="centerCrop"
                app:imageAttachment="@{conversation}"
                app:layout_constraintBottom_toTopOf="@id/textView_message"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quote"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="1"
                tools:src="@drawable/vertical_photo" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButton_play"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_black_40"
                android:onClick="@{() -> clickListener.onPreviewClick(conversation)}"
                android:padding="@dimen/x_small_padding"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/imageView_attachment"
                app:layout_constraintEnd_toEndOf="@id/imageView_attachment"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="@id/imageView_attachment"
                app:layout_constraintTop_toTopOf="@id/imageView_attachment"
                app:layout_constraintWidth_percent="0.25"
                app:srcCompat="@drawable/ic_play_arrow_black" />

            <!-- BUTTON ATTACHMENT STATE -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButton_state"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/x_small_margin"
                android:layout_marginBottom="@dimen/x_small_margin"
                android:background="@drawable/bg_black_40"
                android:padding="@dimen/x_small_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_file_upload_black"
                android:tint="@color/white"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/imageView_attachment"
                app:layout_constraintStart_toStartOf="parent"
                custom:iconForState="@{conversation}"
                tools:visibility="visible" />

            <com.naposystems.napoleonchat.ui.custom.circleProgressBar.CircleProgressBar
                android:id="@+id/progressBar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageButton_state"
                app:layout_constraintEnd_toEndOf="@id/imageButton_state"
                app:layout_constraintStart_toStartOf="@id/imageButton_state"
                app:layout_constraintTop_toTopOf="@id/imageButton_state"
                custom:progress="0"
                custom:progressBarThickness="3dp"
                custom:progressbarColor="?attr/attrTintProgressBar"
                tools:progress="70"
                tools:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar_indeterminate"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="0dp"
                android:indeterminate="true"
                android:padding="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageButton_state"
                app:layout_constraintEnd_toEndOf="@id/imageButton_state"
                app:layout_constraintStart_toStartOf="@id/imageButton_state"
                app:layout_constraintTop_toTopOf="@id/imageButton_state"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView_message"
                style="@style/MyMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_small_margin"
                android:text="@{conversation.message.body}"
                android:visibility="@{conversation.message.body.empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_attachment"
                tools:text="@tools:sample/lorem" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:visibility="gone"
                app:formatTime="@{timeFormat}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toTopOf="@id/imageView_message_status"
                app:messageDateSend="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_message"
                app:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_message_sent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_incoming_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorTimeMyMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>