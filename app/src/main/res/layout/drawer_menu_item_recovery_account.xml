<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_info_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/attrIconAndTextColorDrawer" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/circle_alpha"
        app:tint="@color/red"
        app:layout_constraintTop_toTopOf="@id/imageView_icon"

        app:layout_constraintEnd_toEndOf="@id/imageView_icon"/>

    <TextView
        style="@style/BodyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:text="@string/text_account_recovery_information"
        android:textColor="?attr/attrIconAndTextColorDrawer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_icon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>