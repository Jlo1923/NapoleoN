<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_padding"
        android:paddingTop="@dimen/x_x_small_padding"
        android:paddingBottom="@dimen/x_x_small_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_incoming_message"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstIncomingMessage="@{isFirst}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <TextView
                android:id="@+id/textView_count_down"
                style="@style/IncomingMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x_small_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10:34"
                tools:visibility="visible" />

            <com.naposystems.pepito.ui.custom.audioPlayer.AudioPlayerCustomView
                android:id="@+id/audio_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:controlColors="@color/colorTextIncomingMessage"
                app:isEncryptedFile="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_count_down"
                app:seekbarProgressBackgroundTint="@color/black"
                app:seekbarProgressTint="@color/colorTextIncomingMessage"
                app:seekbarThumbTint="@color/colorSecondaryDark" />

            <TextView
                style="@style/IncomingMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/audio_player"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>