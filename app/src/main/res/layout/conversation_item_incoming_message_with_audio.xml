<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.naposystems.napoleonchat.BuildConfig" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="conversation"
            type="com.naposystems.napoleonchat.entity.message.MessageAndAttachment" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.napoleonchat.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_incoming_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingStart="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@drawable/bg_incoming_message"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstIncomingMessage="@{isFirst}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <com.naposystems.napoleonchat.ui.custom.inputPanel.InputPanelQuote
                android:id="@+id/quote"
                style="@style/QuoteConversation"
                android:onClick="@{() -> clickListener.goToQuote(conversation, itemPosition)}"
                app:isGoTo="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="wrap"
                tools:visibility="visible" />

            <com.naposystems.napoleonchat.ui.custom.audioPlayer.AudioPlayerCustomView
                android:id="@+id/audio_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quote"
                custom:audioId="@{conversation.message.webId}"
                custom:controlColors="?attr/attrTintColorControlIncomingMessage"
                custom:isEncryptedFile="@{BuildConfig.ENCRYPT_API ? true : false}"
                custom:seekbarProgressBackgroundTint="@color/color_C0C0C0"
                custom:seekbarProgressTint="?attr/attrTintColorControlIncomingMessage"
                custom:seekbarThumbTint="?attr/attrTintColorSecondaryDark" />

            <ImageView
                android:id="@+id/imageView_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:showCheck="@{conversation}"
                android:src="@drawable/ic_baseline_check_circle"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/audio_player" />

            <TextView
                style="@style/IncomingMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:formatTime="@{timeFormat}"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_check"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/audio_player"
                app:messageDateIncoming="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="@id/container_message"
            app:layout_constraintStart_toEndOf="@id/container_message"
            app:layout_constraintTop_toTopOf="@id/container_message">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButton_state"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_black_40"
                android:padding="@dimen/x_small_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_file_upload_black"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                custom:iconForState="@{conversation}"
                tools:visibility="visible" />

            <com.naposystems.napoleonchat.ui.custom.circleProgressBar.CircleProgressBar
                android:id="@+id/progressBar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                custom:progress="0"
                custom:progressBarThickness="3dp"
                custom:progressbarColor="?attr/attrColorButtonTint"
                tools:progress="70"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressBar_indeterminate"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:indeterminate="true"
                android:progressBackgroundTint="?attr/attrSeekbarProgressTint"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginStart="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_incoming_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorTimeMyMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>