<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/attrBackgroundColorBackground">

            <!-- SUBSCRIPTION -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_subscription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/redIntense"
                android:backgroundTint="@color/redIntense"
                android:padding="@dimen/small_padding"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/imageButton_subscription_start_icon"
                    style="@style/OptionEndIcon"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_message_subscription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_message_subscription"
                    app:srcCompat="@drawable/anim_cancel_edit" />

                <TextView
                    android:id="@+id/textView_message_subscription"
                    style="@style/BodyTextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageButton_subscription_start_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/text_expired_subscription" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- STATUS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status"
                android:backgroundTint="?attr/attrBackgroundSectionColor"
                android:padding="@dimen/small_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_subscription">

                <TextView
                    android:id="@+id/textView_status"
                    style="@style/BodyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/imageButton_status_end_icon"
                    style="@style/OptionEndIcon"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="?attr/attrTintColorSecondaryDark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_right_primary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ViewSwitcher
                android:id="@+id/viewSwitcher_chats"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inAnimation="@anim/fade_in"
                android:outAnimation="@anim/fade_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_status">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_chats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/home_fragment_item" />

                <com.naposystems.pepito.ui.custom.emptyState.EmptyStateCustomView
                    android:id="@+id/empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    custom:description="@string/text_empty_state_conversation_description"
                    custom:image="@drawable/image_empty_state_conversation"
                    custom:title="@string/text_empty_state_conversation_title" />

            </ViewSwitcher>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_contacts"
            style="@style/FabPrimary"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/ic_person_black"
            app:tint="?attr/attrFabIconColor" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>