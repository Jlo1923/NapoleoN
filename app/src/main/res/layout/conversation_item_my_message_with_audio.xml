<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.naposystems.pepito.BuildConfig" />

        <import type="com.naposystems.pepito.utility.Constants.MessageStatus" />

        <import type="android.view.View" />

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingEnd="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@drawable/bg_my_message"
            android:paddingStart="@dimen/small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstMyMessage="@{isFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <com.naposystems.pepito.ui.custom.inputPanel.InputPanelQuote
                android:id="@+id/quote"
                style="@style/QuoteConversation"
                android:onClick="@{() -> clickListener.goToQuote(conversation, itemPosition)}"
                app:isGoTo="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="wrap"
                tools:visibility="gone" />

            <com.naposystems.pepito.ui.custom.audioPlayer.AudioPlayerCustomView
                android:id="@+id/audio_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quote"
                custom:audioId="@{conversation.message.webId}"
                custom:controlColors="?attr/attrTintColorControlMyMessage"
                custom:seekbarProgressBackgroundTint="@color/color_C0C0C0"
                custom:seekbarProgressTint="?attr/attrTintColorControlMyMessage"
                custom:seekbarThumbTint="?attr/attrSeekbarThumbTint" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:visibility="gone"
                app:formatTime="@{timeFormat}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toTopOf="@id/imageView_message_status"
                app:messageDateSend="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/audio_player"
                app:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_access_time_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButton_state"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/small_margin"
            android:background="@drawable/bg_black_40"
            android:padding="@dimen/x_small_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_file_upload_black"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/container_message"
            app:layout_constraintEnd_toStartOf="@id/container_message"
            app:layout_constraintTop_toTopOf="@id/container_message"
            custom:iconForState="@{conversation}"
            tools:visibility="visible" />

        <com.naposystems.pepito.ui.custom.circleProgressBar.CircleProgressBar
            android:id="@+id/progressBar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageButton_state"
            app:layout_constraintEnd_toEndOf="@id/imageButton_state"
            app:layout_constraintStart_toStartOf="@id/imageButton_state"
            app:layout_constraintTop_toTopOf="@id/imageButton_state"
            custom:progress="0"
            custom:progressBarThickness="3dp"
            custom:progressbarColor="?attr/attrColorButtonTint"
            tools:progress="70"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar_indeterminate"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:indeterminate="true"
            android:progressBackgroundTint="?attr/attrSeekbarProgressTint"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageButton_state"
            app:layout_constraintEnd_toEndOf="@id/imageButton_state"
            app:layout_constraintStart_toStartOf="@id/imageButton_state"
            app:layout_constraintTop_toTopOf="@id/imageButton_state"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_incoming_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorTimeMyMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>