<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversation"
            type="com.naposystems.pepito.entity.message.MessageAndAttachment" />

        <variable
            name="timeFormat"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.naposystems.pepito.ui.conversation.adapter.ConversationAdapter.ClickListener" />

        <variable
            name="isFirst"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(conversation)}"
        android:paddingEnd="@dimen/small_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/bg_my_message"
            android:paddingStart="@dimen/x_small_padding"
            android:paddingTop="@dimen/x_small_padding"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/x_small_padding"
            app:isFirstMyMessage="@{isFirst}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:maxHeight="100dp"
                android:onClick="@{() -> clickListener.goToQuote(conversation)}"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/audio_player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <com.naposystems.pepito.ui.custom.inputPanel.InputPanelQuote
                    android:id="@+id/quote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:isGoTo="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.naposystems.pepito.ui.custom.audioPlayer.AudioPlayerCustomView
                android:id="@+id/audio_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:controlColors="?attr/attrTextColorColorTextMyMessage"
                app:isEncryptedFile="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_quote"
                app:seekbarProgressBackgroundTint="@color/black"
                app:seekbarProgressTint="?attr/attrSeekbarProgressTint"
                app:seekbarThumbTint="?attr/attrSeekbarThumbTint" />

            <TextView
                style="@style/MyMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:visibility="gone"
                app:formatTime="@{timeFormat}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_message_status"
                app:layout_constraintEnd_toStartOf="@id/imageView_message_status"
                app:layout_constraintTop_toTopOf="@id/imageView_message_status"
                app:messageDate="@{conversation.message.createdAt}"
                tools:text="10:34"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_message_status"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/audio_player"
                app:messageStatus="@{conversation.message.status}"
                tools:srcCompat="@drawable/ic_access_time_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView_count_down"
            android:layout_width="@dimen/width_self_destruct_time"
            android:layout_height="@dimen/height_self_destruct_time"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/bg_self_destruct_time_my_message"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="?attr/attrTextColorColorTextIncomingMessage"
            android:textSize="@dimen/text_size_self_destruct_time"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/container_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_message"
            tools:text="10:34:20" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>