<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:windowSoftInputMode="adjustPan">

    <data>

        <variable
            name="contact"
            type="com.naposystems.pepito.entity.Contact" />

        <variable
            name="viewModel"
            type="com.naposystems.pepito.ui.conversation.ConversationViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.conversation.ConversationFragment">

            <!-- HEADER STATUS -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/flatActionBarColor"
                android:padding="@dimen/small_padding"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView_user_status"
                    style="@style/BodyTextView.White"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@{contact.status}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Este es un estado casuistico" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_call"
                    style="@style/ConversationToolbarIcon"
                    android:layout_marginEnd="@dimen/normal_margin"
                    app:layout_constraintBottom_toBottomOf="@id/button_video_call"
                    app:layout_constraintEnd_toStartOf="@id/button_video_call"
                    app:layout_constraintTop_toTopOf="@id/button_video_call"
                    app:srcCompat="@drawable/ic_phone_white" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_video_call"
                    style="@style/ConversationToolbarIcon"
                    android:layout_marginEnd="@dimen/small_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_video_cam_white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.4"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@id/container_editText_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_status"
                tools:background="@drawable/vertical_photo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_conversation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="true"
                app:layout_constraintBottom_toTopOf="@id/container_editText_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_status"
                app:layout_constraintVertical_bias="0.0"
                tools:itemCount="30"
                tools:listitem="@layout/conversation_item_my_message">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_editText_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.naposystems.pepito.ui.custom.inputPanel.InputPanelWidget
                    android:id="@+id/inputPanel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_fab_scroll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:outlineProvider="none"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/textView_notification_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_textview_notification_message"
                android:text="!"
                android:outlineProvider="none"
                android:gravity="center"
                android:elevation="17dp"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:borderWidth="0dp"
                app:layout_constraintEnd_toEndOf="@+id/fab_go_down"
                tools:text="!"
                tools:visibility="visible"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_go_down"
                style="@style/FabGoDown"
                android:src="@drawable/ic_keyboard_arrow_down_black"
                android:visibility="invisible"
                app:fabSize="normal"
                android:outlineProvider="none"
                app:backgroundTint="@color/fabNotificationMessage"
                app:borderWidth="0dp"
                app:elevation="16dp"
                app:fabCustomSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/fabIconColor"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>