<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="contact"
            type="com.naposystems.napoleonchat.entity.Contact" />

        <variable
            name="viewModel"
            type="com.naposystems.napoleonchat.ui.conversation.ConversationViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.conversation.ConversationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_height="match_parent"
            tools:showIn="@layout/conversation_fragment">

            <com.naposystems.napoleonchat.ui.custom.noScrollView.NoScrollView
                android:id="@+id/scrollView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_status"
                    tools:src="@drawable/vertical_photo" />
            </com.naposystems.napoleonchat.ui.custom.noScrollView.NoScrollView>

            <!-- HEADER STATUS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/attrBackgroundColorPrimary"
                android:elevation="1dp"
                android:padding="@dimen/small_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView_user_status"
                    style="@style/BodyTextView.White"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@{contact.status}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_video_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@tools:sample/lorem[2]" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_call"
                    style="@style/ConversationToolbarIcon"
                    android:layout_marginEnd="@dimen/x_small_margin"
                    android:tint="?attr/attrConversationIconColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_phone_white" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_video_call"
                    style="@style/ConversationToolbarIcon"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:tint="?attr/attrConversationIconColor"
                    app:layout_constraintBottom_toBottomOf="@id/button_call"
                    app:layout_constraintEnd_toStartOf="@id/button_call"
                    app:layout_constraintTop_toTopOf="@id/button_call"
                    app:srcCompat="@drawable/ic_video_cam_white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- RECYCLERVIEW -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_conversation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="true"
                app:layout_constraintBottom_toTopOf="@id/inputPanel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_status"
                tools:itemCount="2"
                tools:listitem="@layout/conversation_item_incoming_message" />

            <!-- INPUT PANEL -->
            <com.naposystems.napoleonchat.ui.custom.inputPanel.InputPanelWidget
                android:id="@+id/inputPanel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:isCancelable="true"
                app:isGoTo="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/floatingActionButton_send"
                app:layout_constraintStart_toStartOf="parent" />

            <com.naposystems.napoleonchat.ui.custom.fabSend.FabSend
                android:id="@+id/floatingActionButton_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x_small_margin"
                android:layout_marginBottom="@dimen/x_small_margin"
                android:contentDescription="submit|!!"
                android:src="@drawable/anim_mic_send"
                app:elevation="1dp"
                app:fabCustomSize="@dimen/conversation_fab_size"
                app:layout_constraintBottom_toBottomOf="@id/inputPanel"
                app:layout_constraintEnd_toEndOf="parent"
                app:showOnlySendIcon="false" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_lock_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="180dp" />

            <include
                android:id="@+id/container_lock_audio"
                layout="@layout/custom_view_fab_send"
                android:layout_width="@dimen/conversation_fab_size"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/floatingActionButton_send"
                app:layout_constraintEnd_toEndOf="@id/floatingActionButton_send"
                app:layout_constraintTop_toTopOf="@id/guideline_lock_audio"
                app:layout_constraintVertical_bias="0"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--FAB SCROLL TO BOTTOM-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_fab_scroll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp"
            android:outlineProvider="none">

            <TextView
                android:id="@+id/textView_notification_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_textview_notification_message"
                android:elevation="17dp"
                android:gravity="center"
                android:outlineProvider="none"
                android:text="!"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:borderWidth="0dp"
                app:layout_constraintEnd_toEndOf="@+id/fab_go_down"
                tools:ignore="MissingConstraints"
                tools:text="!"
                tools:visibility="visible" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_go_down"
                style="@style/FabGoDown"
                android:outlineProvider="none"
                android:src="@drawable/ic_keyboard_arrow_down_black"
                android:visibility="gone"
                app:backgroundTint="@color/fabNotificationMessage"
                app:borderWidth="0dp"
                app:elevation="16dp"
                app:fabCustomSize="40dp"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/fabIconColor"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>