<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="contact"
            type="com.naposystems.pepito.entity.Contact" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.conversation.ConversationFragment">

            <!-- HEADER STATUS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/flatActionBarColor"
                android:padding="@dimen/small_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView_user_status"
                    style="@style/BodyTextView.White"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@{contact.status}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Este es un estado casuistico" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_call"
                    style="@style/ConversationToolbarIcon"
                    android:layout_marginEnd="@dimen/normal_margin"
                    app:layout_constraintBottom_toBottomOf="@id/button_video_call"
                    app:layout_constraintEnd_toStartOf="@id/button_video_call"
                    app:layout_constraintTop_toTopOf="@id/button_video_call"
                    app:srcCompat="@drawable/ic_phone_white" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_video_call"
                    style="@style/ConversationToolbarIcon"
                    android:layout_marginEnd="@dimen/small_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_video_cam_white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_conversation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="true"
                app:layout_constraintBottom_toTopOf="@id/container_editText_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_status"
                tools:itemCount="30"
                tools:listitem="@layout/conversation_item_my_message" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_editText_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_with_top_separator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_message"
                    style="@style/TextInputLayoutOutlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:hint="@string/text_write_message"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_send"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconDrawable="@drawable/ic_insert_emoticon_black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:backgroundTint="@color/buttonTint"
                    app:borderWidth="0dp"
                    app:fabCustomSize="@dimen/conversation_fab_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_send_black"
                    app:tint="@color/fabIconColor" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>