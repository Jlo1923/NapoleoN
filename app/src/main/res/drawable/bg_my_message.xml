<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="40dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="?attr/attrBackgroundMyMessage" />
                <corners android:radius="@dimen/minor_radius" />
            </shape>
        </rotate>
    </item>
    <item android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/attrBackgroundMyMessage" />
            <corners android:radius="@dimen/minor_radius" />
        </shape>
    </item>
</layer-list>