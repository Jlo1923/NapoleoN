<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item>
                <shape>
                    <stroke
                        android:width="2dp"
                        android:color="?attr/attrBackgroundSectionColor"/>

                    <corners android:bottomRightRadius="4dp"
                        android:bottomLeftRadius="4dp"
                        android:topLeftRadius="4dp"
                        android:topRightRadius="4dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_arrow_down_black" android:gravity="center_vertical|right" android:right="5dp">

                <bitmap android:src="@drawable/ic_arrow_down_black" android:tint="?attr/attrTintColorSecondaryDark"/>
            </item>

        </layer-list>
    </item>
</selector>