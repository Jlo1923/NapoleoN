<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppSecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppOutlinedPrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppPrimaryButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/normal_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewPrimaryTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecondaryTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecondaryTitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyTextView">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="BodyTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallBodyTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="SmallBodyTextView.Link">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/linkTextColor</item>
    </style>

    <style name="SmallBodyTextView.Error" parent="SmallBodyTextView">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="TextViewEnterCodeStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_editText_enter_code</item>
        <item name="android:background">@drawable/bg_enter_code</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_editText_enter_code</item>
        <item name="android:maxLength">1</item>
        <item name="android:text">@string/middle_dash</item>
    </style>

</resources>
