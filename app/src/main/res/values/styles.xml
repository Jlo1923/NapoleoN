<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="layout_constraintWidth_percent">@dimen/width_app_button</item>
    </style>

    <style name="AppPrimaryButton.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="layout_constraintWidth_percent">@dimen/width_app_button</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="AppSecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppOutlinedPrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/buttonTint</item>
        <item name="strokeColor">@color/buttonTint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppOutlinedPrimaryButtonSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/buttonTint</item>
        <item name="iconTint">@null</item>
        <item name="android:textSize">@dimen/minor_text_size</item>
        <item name="strokeColor">@color/buttonTint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple_tint</item>
    </style>

    <style name="AppOutlinedPrimaryButtonSmall.Red" parent="AppOutlinedPrimaryButtonSmall">
        <item name="android:textColor">@color/red</item>
        <item name="strokeColor">@color/red</item>
        <item name="rippleColor">@color/ripple_red</item>
    </style>

    <style name="AppPrimaryButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/buttonTint</item>
        <item name="android:textSize">@dimen/normal_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewPrimaryTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecondaryTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecondaryTitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyTextView">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="BodyTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewListTitle" parent="BodyTextView.Bold">
        <item name="android:background">@color/sectionColor</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="BodyTextView.Tint">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyMessageTextView" parent="BodyTextView">
        <item name="android:textColor">@color/colorTextMyMessage</item>
    </style>

    <style name="IncomingMessageTextView" parent="BodyTextView">
        <item name="android:textColor">@color/colorTextIncomingMessage</item>
    </style>

    <style name="SmallBodyTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="SmallBodyTextView.Link">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/linkTextColor</item>
    </style>

    <style name="SmallBodyTextView.Error" parent="SmallBodyTextView">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="SmallBodyTextView.White" parent="SmallBodyTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyMessageDateTextView" parent="SmallBodyTextView">
        <item name="android:textColor">@color/colorTextMyMessage</item>
    </style>

    <style name="IncomingMessageDateTextView" parent="SmallBodyTextView">
        <item name="android:textColor">@color/colorTextIncomingMessage</item>
    </style>

    <style name="SmallBodyTextView.WhiteBold" parent="SmallBodyTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MinorBodyTextView">
        <item name="android:textSize">@dimen/minor_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="MinorBodyTextView.White" parent="MinorBodyTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="TextViewEnterCodeStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_editText_enter_code</item>
        <item name="android:background">@drawable/bg_enter_code</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_editText_enter_code</item>
        <item name="android:maxLength">1</item>
        <item name="android:hint">@string/middle_dash</item>
    </style>

    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/secondaryTextColor</item>
        <item name="boxStrokeColor">@color/textinput_layout_box_color</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="android:colorAccent">@color/buttonTint</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorIconTint">@color/colorError</item>
    </style>

    <style name="EditTextInputPanel" parent="Widget.AppCompat.EditText">
        <item name="hintTextColor">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OptionEndIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/colorSecondaryDark</item>
    </style>

    <style name="OptionStartIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/colorSecondaryDark</item>
    </style>

    <style name="Option">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_white_with_separator</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Option.WithOutLine">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="OptionTitle" parent="BodyTextView.Bold">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="OptionValue" parent="SmallBodyTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLength">@dimen/max_length_display_name</item>
        <item name="android:padding">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AccessPinEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:digits">@string/only_numbers</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ConversationToolbarIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CardViewAttachmentItem">
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageViewAttachment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="TextViewAttachment" parent="BodyTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextViewCountTime">
        <item name="android:textSize">@dimen/count_time_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
